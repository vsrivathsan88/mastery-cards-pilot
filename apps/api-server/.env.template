# Server Configuration
PORT=4000
NODE_ENV=development

# Security - IMPORTANT: Replace with actual secure values
# Generate SESSION_SECRET: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# Generate ENCRYPTION_KEY: node -e "console.log(require('crypto').randomBytes(16).toString('hex'))"
SESSION_SECRET=
ENCRYPTION_KEY=

# API Keys - NEVER commit real keys
# Get your key from: https://aistudio.google.com/app/apikey
GOOGLE_GENERATIVE_AI_API_KEY=

# CORS
ALLOWED_ORIGINS=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_MAX_AGE_MS=3600000

# Privacy
LOG_LEVEL=info
ANONYMIZE_LOGS=true
DATA_RETENTION_DAYS=30
