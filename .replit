run = "bash start-replit.sh"
entrypoint = "apps/mastery-cards-app/server/src/index.js"
modules = ["nodejs-20"]

hidden = [".config", "tsconfig.json", "tsconfig.node.json", ".gitignore"]

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "cd apps/mastery-cards-app/server && npm install && node src/index.js"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 3001
externalPort = 80

[env]
PATH = "/home/runner/$REPL_SLUG/.config/npm/node_global/bin:/home/runner/$REPL_SLUG/node_modules/.bin"
npm_config_prefix = "/home/runner/$REPL_SLUG/.config/npm/node_global"
