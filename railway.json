{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd apps/mastery-cards-app/server && npm ci"
  },
  "deploy": {
    "startCommand": "cd apps/mastery-cards-app/server && node src/index.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
